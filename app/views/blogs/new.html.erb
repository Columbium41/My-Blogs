<div>
    <h1 class="text-center">Create Blog</h1>

    <%= form_with model: @new_blog, url: create_blog_path(user_id: Current.user.id), class: "form blog-form" do |form| %>
        <div class="form-section">
            <%= form.label :title, "Blog Title:" %>
            <%= form.text_field :title %>
        </div>

        <div class="form-section">
            <%= form.label :body, "Blog Content:" %>
            <%= form.text_area :body, size: "70x7" %>
        </div>

        <%= form.submit "Create Blog", class: "submit-form button-dark" %>
    <% end %>
</div>