<div>
    <h1 class="text-center">Forgot your Password?</h1>

    <%= form_with url: password_reset_path, class: "account_form" do |form| %>
        <div class="form-section">
            <%= form.label :email, "Email:" %>
            <%= form.text_field :email, placeholder: "johndoe@example.com" %>
        </div>

        <%= form.submit "Reset Password", class: "submit-form" %>
    <% end %>
</div>