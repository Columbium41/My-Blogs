<nav class="navbar">
    <ul class="nav-links">
        <li><%= link_to "Home", root_path, class: "nav-link" %></li>
        <li><%= link_to "About", about_path, class: "nav-link" %></li>
    </ul>
    <ul class="nav-links">
        <% if !Current.user %>
            <li><%= link_to "Register", sign_up_path, class: "nav-link" %></li>
            <li><%= link_to "Sign In", sign_in_path, class: "nav-link" %></li>
        <% else %>
            <p>Signed in as <%= Current.user.email %></p>
            <%= button_to "Logout", logout_path, method: :delete, class: "logout-button" %>
        <% end %>
    </ul>
</nav>