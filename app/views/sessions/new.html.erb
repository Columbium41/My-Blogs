<div>
    <% if !Current.user %>
        <h1 class="text-center">Sign In</h1>

        <%= form_with url: sign_in_path, class: "account_form" do |form| %>
            <div class="form-section">
                <%= form.label :email, "Email:" %>
                <%= form.text_field :email, placeholder: "email" %>
            </div>

            <div class="form-section">
                <%= form.label :password, "Password:" %>
                <%= form.password_field :password, placeholder: "password" %>
                <%= link_to "Forgot your password?", forgot_password_path %>
            </div> 

            <%= form.submit "Sign In", class: "sign-in-button" %>
        <% end %>
    <% else %>
        <h1 class="text-center">You are already signed in!</h1>
    <% end %>
</div>